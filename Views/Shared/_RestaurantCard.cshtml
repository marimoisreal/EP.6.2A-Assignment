@model EP._6._2A_Assignment.Models.Restaurant

<div class="col-md-6 col-lg-4 mb-4">
    <div class="card shadow-lg h-100 border-0 rounded-4 overflow-hidden">
        <img src="~/images/restaurant-placeholder.jpg" class="card-img-top" alt="Restaurant Image" style="height: 200px; object-fit: cover;">
        <div class="card-body d-flex flex-column">
            <h5 class="card-title text-primary fw-bold">@Model.Name</h5>
            <p class="card-text text-muted">@Model.ownerEmailAdress</p>
            <span class="badge @(
                  Model.Status == "Approved" ? "bg-success" :
                  Model.Status == "Pending" ? "bg-warning text-dark" : "bg-secondary")">
                @Model.Status
            </span>

            <div class="mt-auto d-flex justify-content-between align-items-center pt-3">
                <a asp-controller="Catalog" asp-action="Menu" asp-route-restaurantId="@Model.Id" class="btn btn-primary">
                    SHOW MENU
                </a>

                @if (User.IsInRole("Admin") && string.Equals(Model.Status, "Pending", StringComparison.OrdinalIgnoreCase))
                {
                    <form asp-controller="Catalog" asp-action="ApproveSelected" method="post" class="flex-fill ms-2">
                        <input type="hidden" name="selectedIds" value="@Model.Id" />
                        <button type="submit" class="btn btn-success btn-sm w-100">
                            Approve
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>
