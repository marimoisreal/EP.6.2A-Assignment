@model IEnumerable<EP._6._2A_Assignment.Models.MenuItem>
@inject DataAccess.Context.ApplicationDbContext _context

<h2>Menu Items</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Price</th>
            <th>Status</th>
            <th>Actions</th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Price.ToString("F2") €</td>
                <td>
                    <span class="badge @(item.Status == "Approved" ? "bg-success" : "bg-secondary")">
                        @item.Status
                    </span>
                </td>
                <td>
                    @{
                        var restaurant = _context.Restaurants.FirstOrDefault(r => r.Id == item.RestaurantId);
                        var isOwner = User.Identity.IsAuthenticated && restaurant != null && restaurant.ownerEmailAdress == User.Identity.Name;
                    }

                    @if (isOwner && item.Status == "Pending")
                    {
                        <form asp-controller="Catalog" asp-action="ApproveSelected" method="post">
                            <input type="hidden" name="selectedIds" value="@item.Id" />
                            <button type="submit" class="btn btn-success btn-sm">Confirm Item</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>