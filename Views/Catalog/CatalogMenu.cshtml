@model IEnumerable<EP._6._2A_Assignment.Models.MenuItem>

@{
    ViewData["Title"] = "Menu Items";
}

<h2>Menu Items</h2>

@if (!Model.Any())
{
    <p>No menu items found for this restaurant.</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
               <th>Title</th>
               <th>Price</th>
               <th>Status</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Price</td>
                <td>@item.Status</td>
            </tr>
        }
        </tbody>
    </table>
}
