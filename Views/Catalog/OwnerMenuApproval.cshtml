@model IEnumerable<EP._6._2A_Assignment.Models.MenuItem>

<h2>Approve menu items</h2>

<form asp-action="ApproveSelected" method="post">
    @foreach (var item in Model)
    {
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="selectedIds" value="@item.Id" />
            <label class="form-check-label">
                @item.Title – @item.Price €
            </label>
        </div>
    }
    <button class="btn btn-success mt-3">
        Approve selected
    </button>
</form>
