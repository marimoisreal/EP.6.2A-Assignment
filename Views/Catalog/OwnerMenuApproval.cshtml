@model IEnumerable<EP._6._2A_Assignment.Models.MenuItem>

@{
    ViewData["Title"] = "Owner Approval";
}

<h2>Approve Menu Items</h2>
<p class="text-secondary">Please select the items you want to publish to the catalog.</p>

<form asp-controller="Items" asp-action="ApproveSelected" method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Select</th>
                <th>Title</th>
                <th>Price</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (item.Status != "Approved")
                        {
                            <input type="checkbox" name="selectedIds" value="@item.Id" class="form-check-input" />
                        }
                    </td>
                    <td>@item.Title</td>
                    <td>@item.Price.ToString("F2") EUR</td>
                    <td>
                        <span class="badge @(item.Status == "Approved" ? "bg-success" : "bg-warning text-dark")">
                            @item.Status
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-success">Approve Selected Items</button>
</form>